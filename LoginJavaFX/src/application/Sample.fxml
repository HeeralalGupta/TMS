            <Label layoutX="154.0" layoutY="32.0" text="Login" textFill="PURPLE">
               <font>
                  <Font name="Times New Roman Bold" size="38.0" />
               </font>
            </Label>
            <Label layoutX="158.0" layoutY="133.0" text="Username">
               <font>
                  <Font name="Times New Roman Bold" size="20.0" />
               </font>
            </Label>
            <TextField fx:id="username" layoutX="160.0" layoutY="162.0" prefHeight="25.0" prefWidth="284.0" promptText="Enter username">
               <font>
                  <Font size="15.0" />
               </font>
            </TextField>
            <Label layoutX="160.0" layoutY="207.0" text="Password">
               <font>
                  <Font name="Times New Roman Bold" size="20.0" />
               </font>
            </Label>
            <PasswordField fx:id="password" layoutX="160.0" layoutY="236.0" prefHeight="25.0" prefWidth="287.0" promptText="Enter password">
